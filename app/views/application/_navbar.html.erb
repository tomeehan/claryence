<nav class="top-nav" data-controller="toggle">
  <section class="logo">
    <%= link_to root_path, class: "block" do %>
      <%= image_tag "logo.png", alt: Jumpstart.config.application_name, class: "h-10 md:h-12 w-auto my-0 rounded-lg border border-slate-200" %>
      <span class="sr-only"><%= Jumpstart.config.application_name %></span>
    <% end %>
  </section>

  <section class="nav-container hidden lg:flex" data-toggle-target="toggleable">
    <nav><%= render "left_nav" %></nav>
    <nav><%= render "right_nav" %></nav>
  </section>

  <section class="nav-user-controls">
    <% unless user_signed_in? %>
      <button
        type="button"
        id="sidebar-open"
        data-action="click->toggle#toggle touch->toggle#toggle"
        aria-label="Open menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    <% end %>

    <% if user_signed_in? %>
      <%= render "dev_menu" if Rails.env.development? %>
      <%= render "user_menu" %>
    <% end %>
  </section>
</nav>
