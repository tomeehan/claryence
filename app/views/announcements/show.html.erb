<% Current.meta_tags.set_from(@announcement) %>

<div class="container mx-auto max-w-4xl">
  <h1 class="h2 mt-6 text-center"><%= t(".title") %></h1>
  <p class="mt-2 text-center text-xl text-gray-700"><%= t(".description", name: Jumpstart.config.application_name) %></p>

  <%= link_to announcements_path, class: "text-sm font-medium" do %>
    &larr;
    <%= t(".back") %>
  <% end %>

  <div class="mt-6 flex flex-col rounded-lg bg-white border border-gray-200">
    <%= render @announcement %>
  </div>
</div>
