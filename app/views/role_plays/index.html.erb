<% Current.meta_tags.set(title: "AI Role Play Sessions") %>

<div class="min-h-screen bg-gray-50 -mx-3 lg:mx-0">
  <div class="mx-auto max-w-3xl px-4 py-12 sm:py-16">
    <!-- Hero: typographic, calm, no gradients or shadows -->
    <section class="mb-6 sm:mb-8">
      <h1 class="text-3xl sm:text-5xl font-semibold tracking-tight text-gray-900">What do you want to work on today?</h1>
      <p class="mt-3 text-base text-gray-600">Choose a focused 5-minute practice.</p>
    </section>

    <% if @role_plays.any? %>
      <section id="areas" class="grid grid-cols-1 gap-4 sm:gap-6 md:grid-cols-2">
        <% @role_plays.each do |role_play| %>
          <article class="group relative rounded-2xl bg-white border border-gray-200 p-6 sm:p-7 shadow-sm transition hover:shadow-md hover:border-gray-300">
            <h2 class="text-xl font-semibold text-gray-900">
              <%= role_play.name %>
            </h2>

            <p class="mt-2 text-sm leading-6 text-gray-600">
              <%= role_play.summary.presence || role_play.description.to_plain_text.truncate(100) %>
            </p>

            <% if current_user&.admin? %>
              <div class="mt-2">
                <%= link_to "Previous chats", role_play_role_play_sessions_path(role_play), class: "hidden text-xs font-medium text-gray-500 hover:text-gray-700" %>
              </div>
            <% end %>

            <div class="mt-5 flex items-center justify-between">
              <span class="text-xs text-gray-500">
                <%= role_play.duration_minutes %> min
              </span>

              <%= link_to "Start chat", new_role_play_role_play_session_path(role_play), class: "inline-flex items-center rounded-lg sm:rounded-full bg-[#1a365d] px-5 py-2.5 text-sm font-medium text-white hover:bg-[#142849] focus:outline-none focus-visible:ring-2 focus-visible:ring-[#1a365d]/50 transition-colors" %>
            </div>
          </article>
        <% end %>
      </section>
    <% else %>
      <section
        id="areas"
        class="rounded-2xl bg-white p-10 text-center shadow-sm"
      >
        <p class="text-sm text-gray-600">
          No role play scenarios available yet.
        </p>
      </section>
    <% end %>
  </div>
</div>
