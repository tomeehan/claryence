<% Current.meta_tags.set(title: "AI Chat") %>

<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">AI Role Play Sessions</h1>
    <p class="mt-2 text-gray-600">Practice leadership conversations with AI</p>
  </div>

  <% if @role_plays.any? %>
    <div class="grid gap-6 md:grid-cols-2">
      <% @role_plays.each do |role_play| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            <%= role_play.name %>
          </h3>

          <% if role_play.description.present? %>
            <div class="text-gray-600 mb-4 prose-sm">
              <%= role_play.description.to_plain_text.truncate(150) %>
            </div>
          <% end %>

          <div class="flex items-center justify-between pt-4 border-t border-gray-100">
            <div class="text-sm text-gray-500">
              <%= role_play.duration_minutes %> minutes
            </div>
            <div class="flex items-center gap-2">
              <%= link_to "Previous chats", role_play_role_play_sessions_path(role_play), class: "inline-flex items-center gap-2 px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors font-medium" %>
              <%= link_to "Start Chat", new_role_play_role_play_session_path(role_play), class: "inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors font-medium" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg border-2 border-dashed border-gray-300 p-12 text-center">
      <p class="text-gray-600">No role play scenarios available yet.</p>
    </div>
  <% end %>
</div>
