<%
  # Use larger text areas for markdown fields
  use_large_textarea = ['description', 'llm_instructions', 'recommended_for'].include?(field.attribute_name.to_s)
%>

<% if use_large_textarea %>
  <%= form.text_area field.attribute_name, rows: 15, class: "form-input", placeholder: "Supports markdown formatting" %>
<% else %>
  <%= form.text_area field.attribute_name, class: "form-input" %>
<% end %>
