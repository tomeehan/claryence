<% Current.meta_tags.set(title: "Start Chat Session") %>

<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="mb-8">
    <%= link_to "← Back to Role Plays", role_plays_path, class: "text-blue-600 hover:text-blue-700" %>
  </div>

  <% role_play = @role_play || RolePlay.find_by(id: params[:role_play_id]) %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= role_play&.name || "Start Chat Session" %></h1>

    <% if role_play&.description.present? %>
      <div class="prose prose-sm mb-6 text-gray-600">
        <%= role_play.description %>
      </div>
    <% end %>

    <div class="mb-8 p-4 bg-blue-50 rounded-lg border border-blue-100">
      <h3 class="font-semibold text-gray-900 mb-2">What to expect:</h3>
      <ul class="text-sm text-gray-700 space-y-1">
        <li>• AI will role-play based on the scenario</li>
        <li>• Responses stream in real-time (like ChatGPT)</li>
        <li>• Duration: approximately <%= role_play&.duration_minutes || "—" %> minutes</li>
        <li>• Practice as many times as you'd like</li>
      </ul>
    </div>

    <%= form_with url: role_play_role_play_sessions_path(role_play), method: :post, local: true do |f| %>
      <div class="flex gap-4">
        <button type="submit" data-controller="submit-loading" class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors cursor-pointer btn btn-primary">
          <span data-submit-loading-target="label" class="inline-flex items-center gap-2">Start Chat Session</span>
          <span data-submit-loading-target="spinner" class="hidden">
            <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
            </svg>
            Starting…
          </span>
        </button>
        <%= link_to "Cancel", role_plays_path, class: "px-6 py-3 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
